{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make_web",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/red_x/build-web.ps1"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "make_native",
      "type": "shell",
      "command": "C:\\tools\\msys64\\msys2_shell.cmd",
      "args": [
        "-mingw64",
        "-defterm",
        "-no-start",
        "-here",
        "-c",
        "cd '${workspaceFolder}/red_x'; make"
      ],
      "group": "build"
    },
    {
      "label": "make_ubuntu",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cd '${workspaceFolder}/red_x' && chmod +x build-ubuntu.sh && ./build-ubuntu.sh"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "start_server",
      "type": "shell",
      "command": "powershell",
      "args": ["-Command", "Set-Location -Path '${workspaceFolder}/red_x'; node server.js"],
      "group": "none"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "powershell",
      "args": ["-Command", "Set-Location -Path '${workspaceFolder}/red_x'; make clean"],
      "group": "none"
    },
    {
      "label": "deploy",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/deploy-gh-pages.ps1"],
      "group": "none"
    },
    {
      "label": "generate_contract_docs",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "git checkout temp-check-actions; Clear-Host; Write-Host 'Installing solidity-docgen...' -ForegroundColor Cyan; npm install -g solidity-docgen; Write-Host 'Generating documentation...' -ForegroundColor Green; solidity-docgen --solc-module solc --solc-settings 'optimizer.enabled=true,optimizer.runs=200' --output-dir ./docs/contracts"
      ],
      "group": "build"
    },
    {
      "label": "branch_info",
      "type": "shell",
      "command": "${workspaceFolder}/branch-manager.cmd info",
      "group": "none"
    },
    {
      "label": "switch_to_main",
      "type": "shell",
      "command": "${workspaceFolder}/branch-manager.cmd switch 001",
      "group": "none"
    },
    {
      "label": "switch_to_docs",
      "type": "shell",
      "command": "${workspaceFolder}/branch-manager.cmd switch temp-check-actions",
      "group": "none"
    },
    {
      "label": "sync_branches",
      "type": "shell",
      "command": "${workspaceFolder}/branch-manager.cmd sync",
      "group": "none"
    },
    {
      "label": "make_native_bypass",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "if (!(Test-Path '${workspaceFolder}/red_x/red_x.exe') -and !(Test-Path '${workspaceFolder}/red_x/red_x')) { echo 'Creating placeholder file for red_x' > '${workspaceFolder}/red_x/red_x.placeholder' }"
      ],
      "group": "build"
    },
    {
      "label": "setup_emsdk",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/setup-emsdk.ps1"],
      "group": "build"
    },
    {
      "label": "jekyll_build",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& {cd '${workspaceFolder}'; bundle exec jekyll build}"
      ],
      "group": "build"
    },
    {
      "label": "jekyll_serve",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& {cd '${workspaceFolder}'; bundle exec jekyll serve --livereload}"
      ],
      "group": "none"
    },
    {
      "label": "setup_ruby",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/setup-ruby.ps1",
        "-Install"
      ],
      "group": "none"
    },
    // RED X Native Development Tasks
    {
      "label": "RED X: Build Native",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/red_x/Develop-Native.ps1",
        "-Build"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "RED X: Run Native",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/red_x/Develop-Native.ps1",
        "-Run"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "RED X: Build & Run Native",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/red_x/Develop-Native.ps1",
        "-BuildAndRun"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "RED X: Debug Native",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/red_x/Develop-Native.ps1",
        "-DebugMode"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "RED X: Clean Native",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/red_x/Develop-Native.ps1",
        "-Clean"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "RED X: Setup Dependencies",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/red_x/Setup-Dependencies.ps1"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "validate_powershell",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/Validate-PowerShell.ps1"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "validate_powershell_fix",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/Validate-PowerShell.ps1",
        "-Fix"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "problemMatcher": []
    }
  ]
}
