{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "RED X: Debug Native (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/red_x/red_x.exe",
      "args": ["--debug"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/red_x",
      "environment": [
        {
          "name": "RED_X_DEBUG",
          "value": "1"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/tools/msys64/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "RED X: Build Native"
    },
    {
      "name": "RED X: Attach to Process",
      "type": "cppdbg",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "program": "${workspaceFolder}/red_x/red_x.exe",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/tools/msys64/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
