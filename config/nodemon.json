{
  "watch": [
    "server.js",
    "app.js",
    "red_x/*.js",
    "red_x/utils/*.js",
    "cli/**/*.js",
    "scripts/**/*.js"
  ],
  "ignore": ["node_modules", "red_x/public", "**/*.test.js"],
  "ext": "js,json,html",
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "500"
}
