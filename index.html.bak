    <!-- Add progress bar styles -->
    <style>
      .progress-container {
        margin: 20px 0;
        background-color: var(--color-bg-secondary);
        border-radius: 5px;
      }
      .progress-bar {
        height: 28px;
        border-radius: 5px;
        background-color: var(--color-primary);
        text-align: center;
        line-height: 28px;
        color: white;
        font-weight: bold;
        transition: width 1s ease-in-out;
      }
      .status-tag {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 4px;
        margin-left: 10px;
        font-size: 0.8em;
        font-weight: bold;
      }
      .status-completed {
        background-color: #10b981;
        color: white;
      }
      .status-in-progress {
        background-color: #f59e0b;
        color: white;
      }
      .status-planned {
        background-color: #6b7280;
        color: white;
      }
      .completion-section {
        padding: 2rem 0;
        background-color: var(--color-bg-alt);
      }
      .completion-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
      }
      .completion-card {
        background-color: var(--color-bg-secondary);
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .version-tag {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 999px;
        background-color: var(--color-primary);
        color: white;
        font-weight: bold;
        margin-bottom: 1rem;
      }
    </style>
